{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "Database/*": [
        "./src/database/*"
      ],
      "Enums/*": [
        "./src/enums/*"
      ],
      "Inputs/*": [
        "./src/inputs/*"
      ],
      "Interfaces/*": [
        "./src/interfaces/*"
      ],
      "Entities/*": [
        "src/entities/*"
      ],
      "Resolvers/*": [
        "./src/resolvers/*"
      ]
    },
  }
}
