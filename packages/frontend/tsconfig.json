{
	// "extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
    "target": "ESNEXT",
		"module": "ESNEXT",
		"moduleResolution": "Node",
    "lib": ["dom", "ESNEXT", "esnext.asynciterable"],
		"experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
		"paths": {
			"Components/*": [
				"./src/components/*"
			],
			"Pages/*": [
				"./src/pages/*"
			],
			"Layouts/*": [
				"./src/layouts/*"
			],
			"Hooks/*": [
				"src/hooks/*"
			],
			"Graph/*": [
				"src/graph/*"
			],
			"Types/*": [
				"src/types/*"
			],
			"Locales/*": [
				"locales/*"
			],
		},
	},
	"include": [ "src/**/*", "types/icons.d.ts"],
}
