{
  "name": "@kutub/backend",
  "version": "0.0.1",
  "description": "Inpire by Creations du Bonheur",
  "main": "index.js",
  "repository": "git@github.com:daddou-ma/kutub.git",
  "author": "Mohamed El Amine DADDOU <mea.daddou@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "seed:config": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js config -c prod",
    "seed:run": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed -c prod",
    "schema:drop": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -c prod",
    "schema:sync": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync -c prod",
    "start:dev": "npx ts-node -r tsconfig-paths/register src/server.ts -c prod",
    "start:prod": "npx pm2 start npx --name kutub -- ts-node -r tsconfig-paths/register src/server.ts",
    "stop": "npx pm2 stop kutub",
    "start:all": "cd .frontend && yarn install && yarn build && cd .. && yarn start:dev"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@ridi/epub-parser": "^0.7.2-alpha.4",
    "add": "^2.0.6",
    "apollo-server": "^2.22.2",
    "apollo-server-koa": "^2.22.2",
    "axios": "^0.21.1",
    "base-64": "^1.0.0",
    "class-validator": "^0.13.1",
    "faker": "^5.5.2",
    "googleapis": "^73.0.0",
    "graphql": "^15.5.0",
    "graphql-relay": "^0.6.0",
    "graphql-upload": "12.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-compress": "^5.0.1",
    "koa-static": "^5.0.0",
    "md5": "^2.3.0",
    "mysql": "npm:mysql2@^2.1.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.28.1",
    "sqlite3": "^5.0.2",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.31",
    "typeorm-seeding": "^1.6.1",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "devDependencies": {
    "@babel/runtime": "^7.13.10",
    "pm2": "^4.5.6",
    "typescript": "^4.2.3"
  }
}
